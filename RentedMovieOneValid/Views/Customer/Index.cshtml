@model List<RentedMovieOneValid.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
@Html.ActionLink("Add New Customer","Create","Customer")
<h2>Customer details</h2>
<table class="table table-bordered table-hover">
    <tr>
        <th>Name</th>
        <th>Membershiptype</th>
        <th>Action</th>

    </tr>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>

                <td>
                    @Html.ActionLink(c.name, "Details", "Customer", new { id = c.id }, null)
                </td>
                <td>
                    @c.MembershipType.MembershipTypeName

                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Customer", new { id=c.id},null)
                </td>

            </tr>
        }
    </tbody>
</table>
