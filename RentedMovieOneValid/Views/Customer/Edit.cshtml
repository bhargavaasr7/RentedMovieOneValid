@model RentedMovieOneValid.View_Model.CustomerMembershipViewModel
@{
  ViewBag.Title = "Edit";
  Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Edit</h2>
@using (Html.BeginForm())
{
    @Html.HiddenFor(c => c.Customer.id)
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.name)
        @Html.TextBoxFor(c => c.Customer.name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.DateOfBirth)
        @Html.TextBoxFor(c => c.Customer.DateOfBirth,"{0:d}", new{htmlAttributes= new { @class = "form-control" }
   })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.MembershipTypeId)
        @Html.DropDownListFor(c => c.Customer.MembershipTypeId,
       new SelectList(Model.membershipTypes,"id","MembershipTypeName"),"---select---",
       new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" name="cmdSubmit" value="Save changes" class="btn btn-primary" />
    </div>

}
@section Scripts{
    @Scripts.Render("~/Scripts/Jqueryui");
@Scripts.Render("~/Styles/jquerycss");
    <script>
        $(document).ready(function () {
            $("#Customer_DateOfBirth").datepicker({
                changeYear: true,
                changeMonth: true
            });
        });
    </script>
}